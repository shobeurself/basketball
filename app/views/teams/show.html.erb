<h1>Team</h1>
<p>
	<strong>Name:</strong>
	<%= @team.name %>
</p>
<p>
	<strong>City:</strong>
	<%= @team.city %>
</p>
<p>
	<strong>State:</strong>
	<%= @team.state %>
</p>
<h2>Players</h2>
<% @team.players.each do |player| %>
	<p>
		<strong>Name:</strong>
		<%= player.name %>
	</p>
<% end %>
<h2>Add a Player</h2>
<%= form_for([@team, @team.players.build]) do |f| %>
	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>
<%= link_to 'Edit', edit_team_path %>
<%= link_to 'Back', teams_path %>
